#!html

<script>scratch('q-01')</script>
<pre class="q-01">
set [x v] to (pick random (-200) to (200))
set [y v] to (pick random (-150) to (150))
point in direction (90)
pen up
go to x: (x) y: (y)
pen down
repeat (360)
    turn right (1) degrees
    move (1) steps
    if < ((direction) mod (90)) = (0) > then
        stamp
    end
end
</pre>

