<script>scratch('q-03')</script>
<pre class="q-03">
forever   //הפעולה תימשך לנצח 
    if < touching (mouse pointer v)? > then             // אם העכבר נוגע במסך אז
        set [x v] to (pick random (-200) to (200))      //  מערכת איקס  בוחרת מספר אקראי מ-200- עד 200 
        set [y v] to (pick random (-200) to (200)) // בוחרת מספר אקראי מ-200- עד 200 y מערכת 
        glide (0.2) secs to x: (x) y: (y)           //  y הדמות דואה במשך 0.2 שניות מנקודה איקס לנקודה 
    end
end
</pre>

#!html

<script>scratch('q-04')</script>
<pre class="q-04">
set [dx v] to (pick random (-5) to (5))     // בוחרת מספר אקראי מ-5- עד 5 dx מערכת
set [dy v] to (pick random (-5) to (5))
go to x: (0) y: (0)     // הדמות הולכת לאמצע 
forever                     // הפעולה תימשך לנצח 
    change x by (dx)        // הדמות משנה את מיקומה וזזה כל פעם צעד אחד ימינה
    change y by (dy)
    if < touching (edge v)? > then                      //אם הדמות נוגעת בקצה אז. 
        if < (x position) < (-200) > then               //אם ציר איקס קטן מ- 200- אז
            set [dx v] to (pick random (2) to (5))      //  בוחרת מספר אקראי מ-2 עד 5 dx מערכת
        end
        if < (x position) > (200) > then
            set [dx v] to (pick random (-5) to (-2))
        end
        if < (y position) < (-150) > then
            set [dy v] to (pick random (2) to (5))
        end
        if < (y position) > (150) > then                //גדול מ-150 אז y אם ציר 
            set [dy v] to (pick random (-5) to (-2))    //-2 בוחרת מספר אקראי מ-5- עד  dx מערכת 
        end
    end
end
</pre>

